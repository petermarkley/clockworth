pcm.!default {
	type plug
	slave.pcm "plugequal"
}

ctl.!default {
	type equal
}

pcm.plugequal {
	type equal
	slave.pcm "plugdmix"
}

pcm.plugdmix {
	type plug
	slave.pcm "dmixer"
}

pcm.dmixer {
	type dmix
	ipc_key 1024
	slave {
		pcm "hw:2,0"
		period_time 0
		period_size 1024
		buffer_size 8192
		rate 48000
	}
}

ctl.dmixer {
	type hw
	card 2
}
